<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/foodTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/remove_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Food Title"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/remove_btn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_action_remove"
         />

    <TextView
        android:id="@+id/calValueTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/remove_btn"
        android:layout_alignBottom="@+id/remove_btn"
        android:layout_toLeftOf="@+id/remove_btn"
        android:textColor="@color/titleGray"
        android:text="### Cal"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
